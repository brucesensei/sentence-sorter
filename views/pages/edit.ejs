<%- include('../partials/header') %>
<h1>Edit Menu</h1>
<h1>
  <span class="edit-title"><%= gameGrade %></span>
  <span class="edit-title"><%= gameUnit %></span>
  <span class="edit-title"><%= gameTitle %></span>
</h1>

<form action="/edit" method="post">
  <% for (i=0; i<gameData.length; i++) { %>
    <input
    class="edit-box"
    type="text"
    class="edit-box"
    name="question"
    value="<%= gameData[i] %>"
    size="100"
    minlength="4"
    maxlength="100"
    autocomplete="off"
    required><br>
  <% } %>
  <input type="hidden" name="grade" value="<%= gameGrade %>">
  <input type="hidden" name="unit" value="<%= gameUnit %>">            
  <input type="hidden" name="title" value="<%= gameTitle %>">
  <input type="submit" value="submit">
</form>
